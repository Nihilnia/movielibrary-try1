@using ProjectMovie.Models
@model UserIntelModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Movie</th>
            <th scope="col">Category</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var movie in Model.Movies)
        {

            <tr>
                <th scope="row">@Html.ActionLink("X", "DeleteMovie", "User", new { MovieName = movie.Name, Username = Model.User.Username }, new { @class = "btn btn-primary" })</th>
                <td>@movie.Name</td>
                @if (movie.Categories != null)
                {
                    <td>
                        @foreach (var category in movie.Categories)
                        {
                            @category.Name
                        }



                    </td>
                }
                else
                {
                    <td>
                        @Html.ActionLink("Add Category", "AddNewCategory", "User", new { MovieName = movie.Name, Username = Model.User.Username }, new { @class = "btn btn-primary" })
                    </td>
                }
            </tr>
        }

    </tbody>
</table>

